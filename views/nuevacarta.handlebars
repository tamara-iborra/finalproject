<div class="buttons-container">
  <button onclick="printImage()" id="btn-save" class="btn" >Guardar</button>
  <button id="btn-send" class="btn" >Enviar</button>

</div>


<!-- Load html-to-image from CDN -->
<script src="https://cdn.jsdelivr.net/npm/html-to-image@1.11.11/dist/html-to-image.min.js"></script>

<script>
  // Must be global for onclick to work
  function printImage() {
    const node = document.getElementById("wrapper-eve");

    htmlToImage.toPng(node)
      .then(function(url) {
        const link = document.createElement("a");
        link.href = url;
        link.download = "captura.png";
        link.click();
      })
      .catch(function(err){
        console.error("ERROR:", err);
      });
  }
</script>

